<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginBottom="12dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_chat_from"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imageView_chat_from_row"
            android:background="@drawable/rounded_edittext_register_login"
            android:padding="16dp"
            android:maxWidth="240dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_chat_from_row"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView_chat_from_row" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
    />
</android.support.constraint.ConstraintLayout>