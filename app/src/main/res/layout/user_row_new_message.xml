<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_marginTop="16dp">

    <TextView
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:id="@+id/username_textview_new_message"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/imageView_chat_to_row"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/imageView_chat_to_row"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageView_chat_to_row"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView_chat_to_row" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            app:civ_border_width="2dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>